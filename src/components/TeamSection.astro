---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div class="bg-dark py-24 sm:py-32">
    <div class="mx-auto grid max-w-7xl gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
      <div class="max-w-2xl">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl text-white">{title}</h2>
        <p class="mt-6 text-lg leading-8 text-gray-600 text-white">{desc}</p>
      </div>
      <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
        <li>
          <div class="flex items-center gap-x-6">
            <Image aspectRatio="16:9" width={75} format="webp" src={img} alt={title} />
            <div>
              <h3 class="text-base font-semibold leading-7 tracking-tight text-amber-200">{tags}</h3>
              <p class="text-sm font-semibold leading-6 text-indigo-600 ">Co-Founder / CEO</p>
            </div>
          </div>
        </li>
        <li>
            <div class="flex items-center gap-x-6">
              <Image aspectRatio="16:9" width={75} format="webp" src={img} alt={title} />
              <div>
                <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">{tags}</h3>
                <p class="text-sm font-semibold leading-6 text-indigo-600">Co-Founder / CEO</p>
              </div>
            </div>
          </li>
          <li>
            <div class="flex items-center gap-x-6">
              <Image aspectRatio="16:9" width={75} format="webp" src={img} alt={title} />
              <div>
                <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">{tags}</h3>
                <p class="text-sm font-semibold leading-6 text-indigo-600">Co-Founder / CEO</p>
              </div>
            </div>
          </li>
  
        <!-- More people... -->
      </ul>
    </div>
  </div>